{
    "manifest_version": 2,
    "name": "Quickalc",
    "author": "Simone Cingano",
    "description": "A nice, quick, 100% offline calculator with complete keyboard support",
    "version": "1.2.0",
    "icons": {
        "128": "128.png"
    },
    "offline_enabled": true,
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "permissions": [
        "clipboardWrite",
        "clipboardRead",
        "storage"
    ]
}
